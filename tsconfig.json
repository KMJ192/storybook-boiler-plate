{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"]
    },
    "declaration": true,
    "declarationDir": "build",
    "outDir": "build",
    "jsx": "react-jsx",
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "useDefineForClassFields": true,
    "allowJs": false,
    "checkJs": false,
    "skipLibCheck": true,
    "strict": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "noEmit": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": false,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "typeRoots": ["./typings"]
  },
  "include": [
    ".",
    "src/**/*",
    "typings/**/*.d.ts",
    "**/declaration.d.ts",
    "**/namespace.d.ts",
    "./.yarn"
  ]
}
